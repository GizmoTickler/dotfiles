# Example secrets configuration using 1Password CLI
# Copy this file and customize for your needs

{{- if .onepassword.enabled }}

# GitHub Integration
# Create item: op item create --title="GitHub Private Access Token" --password="ghp_your_token_here"
# export GITHUB_TOKEN="$(op read 'op://Private/GitHub Private Access Token/password')"

# OpenAI API Key  
# Create item: op item create --title="OpenAI API Key" --password="sk-your_key_here"
# export OPENAI_API_KEY="$(op read 'op://Private/OpenAI API Key/password')"

# Anthropic API Key
# Create item: op item create --title="Anthropic API Key" --password="sk-ant-your_key_here" 
# export ANTHROPIC_API_KEY="$(op read 'op://Private/Anthropic API Key/password')"

# Docker Hub Token
# Create item: op item create --title="Docker Hub Token" --username="your-docker-username" --password="dckr_pat_your_token"
# export DOCKER_HUB_TOKEN="$(op read "op://Private/Docker Hub Token/password')"
# export DOCKER_HUB_USERNAME="$(op read "op://Private/Docker Hub Token/username')"

# AWS Credentials
# Create item: op item create --title="AWS Credentials" --username="AKIA..." --password="secret_key"
# export AWS_ACCESS_KEY_ID="$(op read "op://Private/AWS Credentials/username')"
# export AWS_SECRET_ACCESS_KEY="$(op read "op://Private/AWS Credentials/password')"

# DigitalOcean Token
# Create item: op item create --title="DigitalOcean API Token" --password="dop_v1_your_token"
# export DIGITALOCEAN_TOKEN="$(op read "op://Private/DigitalOcean API Token/password')"

# Database URLs
# Create item: op item create --title="Production Database" --url="postgresql://user:pass@host:5432/db"
# export DATABASE_URL="$(op read "op://Private/Production Database/url')"

# Redis Connection
# Create item: op item create --title="Redis Connection" --url="redis://user:pass@host:6379"
# export REDIS_URL="$(op read "op://Private/Redis Connection/url')"

# Kubernetes Config (base64 encoded kubeconfig)
# Create item: op item create --title="Kubernetes Config" --field="kubeconfig=<base64_encoded_config>"
# export KUBECONFIG_DATA="$(op read "op://Private/Kubernetes Config/kubeconfig')"

# Custom Application Secrets
# Create item: op item create --title="My App Secret" --password="your_secret_here"
# export MY_APP_SECRET="$(op read "op://Private/My App Secret/password')"

# Slack Webhook
# Create item: op item create --title="Slack Webhook" --url="https://hooks.slack.com/services/..."
# export SLACK_WEBHOOK_URL="$(op read "op://Private/Slack Webhook/url')"

# SSH Keys (for Git signing)
# Create item: op item create --title="SSH Signing Key" --field="public_key=ssh-rsa AAAAB3..." --field="private_key=-----BEGIN OPENSSH PRIVATE KEY-----"
# Note: Store public key for Git config, keep private key in 1Password for backup

{{- else }}

