# SSH Configuration with 1Password Integration
# Clean and simple - let 1Password handle everything

# Include 1Password managed SSH configuration
# This file is automatically generated and maintained by 1Password
Include ~/.ssh/1Password/config

# Global SSH settings
Host *
    # Use 1Password SSH Agent for all connections
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
    
    # Connection settings
    ServerAliveInterval 60
    ServerAliveCountMax 10
    TCPKeepAlive yes
    Compression yes
    
    # Security settings
    AddKeysToAgent yes

# Optional: Custom host overrides (if needed)
# These will override 1Password settings for specific hosts

# Local development convenience (optional)
Host *.local
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel QUIET

Host 192.168.* 10.* 172.16.* 172.17.* 172.18.* 172.19.* 172.20.* 172.21.* 172.22.* 172.23.* 172.24.* 172.25.* 172.26.* 172.27.* 172.28.* 172.29.* 172.30.* 172.31.*
    StrictHostKeyChecking no  
    UserKnownHostsFile /dev/null
    LogLevel QUIET